    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^4.0.0-beta.2",
    "lite-server": "^2.4.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.26.1",
    "webpack-cli": "^3.1.2",
    "workbox-webpack-plugin": "^3.6.3"
  },
